@inherits DialogAutoFullscreen
@inject IWorkspaceService WorkspaceService
@inject IStorageService StorageService
@inject IDialogService DialogService
@inject ISnackbar Snackbar
@inject ITranslationsService t

<MudDialog>
	<DialogContent>
		<MudInput Immediate="true" @bind-Value="Input" Placeholder="@Placeholder" Label="@Placeholder" Variant="Variant.Filled" />
	</DialogContent>
	
	<DialogActions>
		<MudButton Variant="Variant.Filled" Color="Color.Error" OnClick="Cancel">@t.T("inputStringDialog", "cancel")</MudButton>
		<MudButton Variant="Variant.Filled" Color="Color.Info" Disabled="!CanSubmit" OnClick="Submit">@t.T("inputStringDialog", "ok")</MudButton>
	</DialogActions>
</MudDialog>


@code {
	[Parameter]
	public string Placeholder { get; set; } = string.Empty;

	string Input { get; set; } = string.Empty;

	private bool CanSubmit => !string.IsNullOrWhiteSpace(Input);
	private void Submit()
	{
		if (!CanSubmit) return;
		Dialog.Close(DialogResult.Ok(Input));
	}

	void Cancel()
	{
		Dialog.Cancel();
	}

}