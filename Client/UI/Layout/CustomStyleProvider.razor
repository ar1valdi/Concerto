@using Blazored.LocalStorage
@inject ISyncLocalStorageService LocalStorage
@inject IJSRuntime JS

<link href="/fontawesome/css/all.min.css" rel="stylesheet">

<style>

	.row-colored {
		border-color: rgba(0, 0, 0, 0.9) !important;
	}
	.row-colored > td {background: inherit;}

	.row-colored.row-modified { background-color: @Blue; }


	.row-colored.row-modified:hover { background-color: @BlueAccent !important; }

	.row-colored.row-new { background-color: @Green; }

	.row-colored.row-new:hover { background-color: @GreenAccent !important; }

	.row-colored.row-deleted { background-color: @Red; }

	.row-colored.row-deleted:hover { background-color: @RedAccent !important; }

	.row-colored.row-edited { background-color: @Purple; }

	.row-colored.row-edited:hover { background-color: @PurpleAccent !important; }

	.mud-nav-group.hidden > .mud-expanded { display: none; }

	.color-folder-yellow
	{
		color: @FolderYellow !important;
	}

	.text-line-through {
		text-decoration: line-through;
	}

	.z-max {
		z-index: 9999 !important;
	}

	.break-word {
		word-break: break-word !important;
	}

	.cursor-pointer {
		cursor: pointer;
	}

	.text-ellipsis {
		white-space: nowrap;
		overflow: hidden;
		text-overflow: ellipsis;
	}

	.text-icon {
		vertical-align: middle !important;
		display: inline !important;
	}

	.fa-force-size
	{
        font-size: 24px !important;
	}

</style>

@code {

	[Parameter]
	public bool DarkMode { get; set; }

	string Blue => DarkMode ? Colors.Blue.Darken3 : Colors.Blue.Lighten4;
	string BlueAccent => DarkMode ? Colors.Blue.Darken4 : Colors.Blue.Lighten3;

	string Green => DarkMode ? Colors.Green.Darken3 : Colors.Green.Lighten4;
	string GreenAccent => DarkMode ? Colors.Green.Darken4 : Colors.Green.Lighten3;

	string Red => DarkMode ? Colors.Red.Darken3 : Colors.Red.Lighten4;
	string RedAccent => DarkMode ? Colors.Red.Darken4 : Colors.Red.Lighten3;

	string Orange => DarkMode ? Colors.Orange.Darken3 : Colors.Orange.Lighten4;
	string OrangeAccent => DarkMode ? Colors.Orange.Darken4 : Colors.Orange.Lighten3;

	string FolderYellow => DarkMode ? Colors.Yellow.Darken3 : Colors.Yellow.Darken2;

	string Purple => DarkMode ? Colors.Purple.Darken3 : Colors.Purple.Lighten4;
	string PurpleAccent => DarkMode ? Colors.Purple.Darken4 : Colors.Purple.Lighten3;
}